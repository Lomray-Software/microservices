{
	"name": "@lomray/microservices-gateway",
	"version": "1.0.0",
	"description": "Microservice based on NodeJS & inverted json.",
	"main": "lib/index.js",
	"types": "lib/index.d.ts",
	"keywords": [
		"node",
		"js",
		"microservice",
		"inverted",
		"json",
		"gateway",
		"worker",
		"typescript"
	],
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Lomray-Software/microservices.git"
	},
	"bugs": {
		"url": "https://github.com/Lomray-Software/microservices/issues"
	},
	"homepage": "https://github.com/Lomray-Software/microservices",
	"author": "Mikhail Yarmaliuk",
	"license": "Apache-2.0",
	"scripts": {
		"test": "NODE_ENV=tests TS_NODE_COMPILER_OPTIONS='{\"target\":\"es6\"}' mocha --harmony --no-warnings  __tests__ --require ts-node/register --recursive --unhandled-rejections=strict --exit",
		"prettier:format": "prettier --write 'src/**/*.{ts,tsx,*.ts,*tsx}'",
		"prettier:check": "prettier --check --debug-check 'src/**/*.{ts,tsx,*.ts,*tsx}'",
		"lint:check": "eslint --ext '.ts,.tsx' 'src/**/*.{ts,tsx,*.ts,*tsx}'",
		"lint:format": "eslint --fix --ext '.ts,.tsx' 'src/**/*.{ts,tsx,*.ts,*tsx}'",
		"ts:check": "tsc --project ./tsconfig.json --skipLibCheck --noemit",
		"build": "rollup -c",
		"start:dev": "node --require ts-node/register src/start.ts",
		"start:prod": "node lib/start.js"
	},
	"dependencies": {
    "@lomray/microservice-helpers": "file:../../packages/@lomray/microservice-helpers/lomray-microservice-helpers-1.0.0.tgz",
		"@lomray/microservice-nodejs-lib": "^2.3.0",
		"@lomray/microservice-remote-middleware": "^1.1.0",
		"cors": "^2.8.5"
	},
	"devDependencies": {
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13"
	}
}
