{
	"name": "@lomray/microservices-gateway",
	"version": "1.0.0",
	"description": "Microservice based on NodeJS & inverted json.",
	"main": "lib/index.js",
	"types": "lib/index.d.ts",
	"keywords": [
		"node",
		"js",
		"microservice",
		"inverted",
		"json",
		"gateway",
		"worker",
		"typescript"
	],
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Lomray-Software/microservices.git"
	},
	"bugs": {
		"url": "https://github.com/Lomray-Software/microservices/issues"
	},
	"homepage": "https://github.com/Lomray-Software/microservices",
	"author": "Mikhail Yarmaliuk",
	"license": "Apache-2.0",
	"scripts": {
		"test": "TS_NODE_COMPILER_OPTIONS='{\"target\":\"es6\"}' mocha --harmony --no-warnings  __tests__ --require ts-node/register --recursive --unhandled-rejections=strict --exit",
		"prettier:format": "prettier --write 'src/**/*.{ts,tsx,*.ts,*tsx}'",
		"prettier:check": "prettier --check --debug-check 'src/**/*.{ts,tsx,*.ts,*tsx}'",
		"lint:check": "eslint --ext '.ts,.tsx' 'src/**/*.{ts,tsx,*.ts,*tsx}'",
		"lint:format": "eslint --fix --ext '.ts,.tsx' 'src/**/*.{ts,tsx,*.ts,*tsx}'",
		"ts:check": "tsc --project ./tsconfig.json --skipLibCheck --noemit",
		"build": "rollup -c",
		"start:dev": "node --require ts-node/register index.ts",
		"start:prod": "node lib/index.js"
	},
	"dependencies": {
		"@lomray/microservice-nodejs-lib": "^1.0.0",
		"cors": "^2.8.5"
	},
	"devDependencies": {
		"@istanbuljs/nyc-config-typescript": "^1.0.1",
		"@types/cors": "^2.8.12",
		"@wessberg/rollup-plugin-ts": "^1.3.14",
		"@zerollup/ts-transform-paths": "^1.7.18",
		"chai": "^4.3.4",
		"mocha": "^9.1.2",
		"nyc": "^15.1.0",
		"rollup": "^2.58.0",
		"sinon": "^11.1.2",
		"sinon-chai": "^3.7.0",
		"ts-node": "^10.2.1",
		"tsconfig-paths": "^3.11.0",
		"ttypescript": "^1.5.12",
		"typescript": "^4.4.3"
	}
}
